  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module":"es2020",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "compiled",
